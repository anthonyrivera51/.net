@model WebApplication1.Models.ModelUsers

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>

    <div class="row justify-content-md-center">
        <div class="col-md-5">
            @using (Html.BeginForm("Save", "Home"))
            {
                //@Html.ValidationSummary()
                @Html.AntiForgeryToken()

                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Crear Usuario</div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Nombre)
                            @Html.TextBoxFor(m => m.Nombre, "", new { @class = "form-control", @placeholder = "First Name" })
                            @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "badge badge-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Apellidos)
                            @Html.TextBoxFor(m => m.Apellidos, "", new { @class = "form-control", @placeholder = "Last Name" })
                            @Html.ValidationMessageFor(m => m.Apellidos, "", new { @class = "badge badge-danger" })

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Identificacion)
                            @Html.TextBoxFor(m => m.Identificacion, "", new { @class = "form-control", @placeholder = "Email" })
                            @Html.ValidationMessageFor(m => m.Identificacion, "", new { @class = "badge badge-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.edad)
                            @Html.TextBoxFor(m => m.edad, new { @class = "form-control", @placeholder = "Password" })
                            @Html.ValidationMessageFor(m => m.edad, "", new { @class = "badge badge-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.cargo)
                            @Html.TextBoxFor(m => m.cargo, new { @class = "form-control", @placeholder = "Confim Password" })
                            @Html.ValidationMessageFor(m => m.cargo, "", new { @class = "badge badge-danger" })
                        </div>
                        <div class="form-group">
                            <input type="submit" name="submit" class="btn btn-danger" value="Crear" />
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
